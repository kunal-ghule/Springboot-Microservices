<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Dependent Spring bean Cfgs -->
    <bean id="ltime" class="java.time.LocalTime" factory-method="now"/>
    <bean id="ltime1" class="java.time.LocalTime" factory-method="of">
    	<constructor-arg value="04"/>
    	<constructor-arg value="20"/>
    </bean>
    
    <!-- Target Spring bean Cfgs -->
    <bean id= "wmg" class= "com.kg.sbeans.WishMessageGenerator">
		<constructor-arg name="lt" ref="ltime"/>
		<property name="lt" ref="ltime1"/>
    </bean>

</beans>